<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".studentinfo.studentinfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/stdtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Information"
            android:fontFamily="@font/muli_semibold"
            android:textSize="24sp"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toBottomOf="@id/stdtext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="10dp"
            android:id="@+id/stdimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/temp"
            android:layout_margin="20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/orange"/>

        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textColor="@color/orange"
            android:fontFamily="@font/muli_semibold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/stdimg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/stdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K S R S S R Girish Kumar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/muli"
            app:layout_constraintTop_toBottomOf="@id/nametext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/stdclass"
            android:layout_margin="5dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/classtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class :"
            android:textColor="@color/orange"
            android:fontFamily="@font/muli_semibold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/stdname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/stdclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class 5"
            android:fontFamily="@font/muli"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/classtext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/addmissiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission Number :"
            android:textColor="@color/orange"
            android:fontFamily="@font/muli_semibold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/stdclass"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/stdadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122323"
            android:fontFamily="@font/muli"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/addmissiontext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/stdadmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/fathertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father Name:"
            android:textColor="@color/orange"
            android:fontFamily="@font/muli_semibold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/div3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/stdfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K S V Subbarao"
            android:fontFamily="@font/muli"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/fathertext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/stdname"
            android:layout_margin="5dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/div4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/stdfname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:background="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>